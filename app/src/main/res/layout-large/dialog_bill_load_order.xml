<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorTransparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:background="@drawable/background_dialog_rounded">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="18dp"
            android:paddingBottom="18dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dialog_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textSize="15sp"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:paddingBottom="18dp"
                    android:textColor="@color/colorGray"
                    tools:ignore="HardcodedText" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorVeryLightGray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:paddingTop="18dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="220dp"
                            android:layout_height="wrap_content">

                            <com.codepipes.tingadmin.custom.RoundedCornerImageView
                                android:id="@+id/order_menu_image"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/default_meal"
                                android:adjustViewBounds="true"
                                android:layout_marginRight="8dp"
                                app:imageRadius="4.0"
                                tools:ignore="RtlHardcoded" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="About"
                                android:textAllCaps="true"
                                android:fontFamily="@font/poppins_thin"
                                android:textSize="18sp"
                                android:textColor="@color/colorGray"
                                tools:ignore="HardcodedText" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:orientation="horizontal"
                                android:layout_marginTop="16dp">

                                <ImageView
                                    android:id="@+id/order_menu_type_icon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_glass_gray"
                                    android:tint="@color/colorLightGray"
                                    android:layout_marginEnd="8dp"/>

                                <TextView
                                    android:id="@+id/order_menu_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Chicken Wings"
                                    android:textSize="13sp"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textColor="@color/colorGray"
                                    tools:ignore="HardcodedText" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="5dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_price_tag_gray_24dp"
                                    android:tint="@color/colorLightGray"
                                    android:layout_marginEnd="8dp"/>

                                <TextView
                                    android:id="@+id/order_menu_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="UGX 109,000"
                                    android:textSize="13sp"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textColor="@color/colorGray"
                                    tools:ignore="HardcodedText" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="5dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_navigation_reservations"
                                    android:tint="@color/colorLightGray"
                                    android:layout_marginEnd="8dp"/>

                                <TextView
                                    android:id="@+id/order_quantity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="10"
                                    android:textSize="13sp"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textColor="@color/colorGray"
                                    tools:ignore="HardcodedText" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="5dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_align_left_gray_24dp"
                                    android:tint="@color/colorLightGray"
                                    android:layout_marginEnd="8dp" />

                                <TextView
                                    android:id="@+id/order_conditions"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-"
                                    android:textSize="13sp"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textColor="@color/colorGray"
                                    tools:ignore="HardcodedText" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="5dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_star_filled_gray"
                                    android:tint="@color/colorLightGray"
                                    android:layout_marginEnd="8dp" />

                                <TextView
                                    android:id="@+id/order_has_promotion"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="NO"
                                    android:textSize="13sp"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textColor="@color/colorGray"
                                    tools:ignore="HardcodedText" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="5dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_clock_white_24dp"
                                    android:tint="@color/colorLightGray"
                                    android:layout_marginEnd="8dp"/>

                                <TextView
                                    android:id="@+id/order_created_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="June 15, 2019"
                                    android:textSize="13sp"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textColor="@color/colorGray"
                                    tools:ignore="HardcodedText" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp">

                        <LinearLayout
                            android:id="@+id/order_status_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/order_accept_button"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginEnd="6dp"
                                android:paddingStart="30dp"
                                android:paddingEnd="30dp"
                                android:background="@drawable/background_green"
                                android:fontFamily="@font/poppins_bold"
                                android:text="Accept"
                                android:textColor="@color/colorWhite"
                                android:textSize="13dp"
                                tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded,SpUsage" />

                            <Button
                                android:id="@+id/order_decline_button"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginStart="6dp"
                                android:paddingStart="30dp"
                                android:paddingEnd="30dp"
                                android:textColor="@color/colorWhite"
                                android:text="Decline"
                                android:textSize="13dp"
                                android:fontFamily="@font/poppins_bold"
                                android:background="@drawable/background_red"
                                tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded,SpUsage" />

                        </LinearLayout>

                        <Button
                            android:id="@+id/dialog_button_close"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginEnd="6dp"
                            android:layout_alignParentEnd="true"
                            android:paddingStart="30dp"
                            android:paddingEnd="30dp"
                            android:background="@drawable/background_red"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Close"
                            android:textColor="@color/colorWhite"
                            android:textSize="13dp"
                            tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded,SpUsage" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</RelativeLayout>