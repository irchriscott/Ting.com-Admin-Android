<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorTransparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:background="@drawable/background_dialog_rounded">

        <com.codepipes.tingadmin.custom.LockedNestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="18dp"
            android:paddingBottom="18dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dialog_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Branch"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textSize="15sp"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:paddingBottom="18dp"
                    android:textColor="@color/colorGray"
                    tools:ignore="HardcodedText" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorVeryLightGray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:paddingTop="18dp">


                    <TextView
                        android:id="@+id/branch_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Kampala Road"
                        android:textSize="22sp"
                        android:includeFontPadding="false"
                        android:textColor="@color/colorGray"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/branch_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Nana Hostels, Makerere"
                        android:textSize="13sp"
                        android:textColor="@color/colorLightGray"
                        tools:ignore="HardcodedText" />

                    <fragment
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:layout_marginTop="12dp"
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp">

                        <Button
                            android:id="@+id/dialog_button_close"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginEnd="6dp"
                            android:layout_alignParentEnd="true"
                            android:paddingStart="30dp"
                            android:paddingEnd="30dp"
                            android:background="@drawable/background_red"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Close"
                            android:textColor="@color/colorWhite"
                            android:textSize="13dp"
                            tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded,SpUsage" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </com.codepipes.tingadmin.custom.LockedNestedScrollView>

    </LinearLayout>

</RelativeLayout>