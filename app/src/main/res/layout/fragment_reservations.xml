<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    tools:context=".fragments.sidebar.ReservationsFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reservations of date"
                        android:textAllCaps="true"
                        android:fontFamily="@font/poppins_thin"
                        android:textSize="22sp"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/reservation_date"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="12sp"
                        android:textColor="@color/colorGray"
                        android:background="@drawable/border_row"
                        android:inputType="none"
                        android:hint="Date"
                        android:importantForAutofill="no"
                        android:scrollbars="vertical"
                        android:textColorHint="@color/colorLightGray"
                        android:focusable="false"
                        tools:ignore="HardcodedText,TextFields" />

                </RelativeLayout>

                <com.codepipes.tingadmin.tableview.TableView
                    android:id="@+id/reservation_of_date_table_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    android:background="@drawable/background_tableview"
                    android:padding="1dp"
                    android:layout_gravity="center_horizontal"
                    app:separator_color="@color/colorVeryLightGray"
                    app:show_horizontal_separator="false"
                    app:show_vertical_separator="true"
                    app:selected_color="@color/colorShadeGray"
                    app:row_header_width="0dp"/>

                <include
                    android:id="@+id/empty_data_date"
                    android:visibility="gone"
                    layout="@layout/include_empty_data" />

                <include
                    android:id="@+id/progress_loader_date"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="20dp"
                    layout="@layout/include_progress_loader" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Reservations"
                        android:textAllCaps="true"
                        android:fontFamily="@font/poppins_thin"
                        android:textSize="22sp"
                        tools:ignore="HardcodedText" />

                </RelativeLayout>

                <com.codepipes.tingadmin.tableview.TableView
                    android:id="@+id/new_reservation_table_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    android:background="@drawable/background_tableview"
                    android:padding="1dp"
                    android:layout_gravity="center_horizontal"
                    app:separator_color="@color/colorVeryLightGray"
                    app:show_horizontal_separator="false"
                    app:show_vertical_separator="true"
                    app:selected_color="@color/colorShadeGray"
                    app:row_header_width="0dp"/>

                <include
                    android:id="@+id/empty_data_new"
                    android:visibility="gone"
                    layout="@layout/include_empty_data" />

                <include
                    android:id="@+id/progress_loader_new"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="20dp"
                    layout="@layout/include_progress_loader" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>