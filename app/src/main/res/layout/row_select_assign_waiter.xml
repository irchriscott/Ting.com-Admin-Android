<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/waiter_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/waiter_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/default_user"
            android:layout_marginEnd="8dp"
            app:civ_border_color="@color/colorVeryLightGray"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/waiter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Select Option"
            android:textColor="@color/colorGray"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            tools:ignore="HardcodedText,RtlHardcoded" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/delete_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_delete_black_24dp"
            android:tint="@color/colorRed"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/remove_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Remove Waiter"
            android:textColor="@color/colorRed"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            tools:ignore="HardcodedText,RtlHardcoded" />

    </LinearLayout>

    <View
        android:id="@+id/select_separator"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorVeryLightGray" />

</LinearLayout>