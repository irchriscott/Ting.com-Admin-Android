<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorTransparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="12dp"
        android:background="@drawable/background_dialog_rounded">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dialog_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Placement"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textSize="13sp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="12dp"
                    android:textColor="@color/colorGray"
                    tools:ignore="HardcodedText" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorVeryLightGray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="120dp"
                            android:layout_height="wrap_content">

                            <com.codepipes.tingadmin.custom.RoundedCornerImageView
                                android:id="@+id/place_user_image"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/default_user"
                                android:adjustViewBounds="true"
                                android:layout_marginRight="6dp"
                                app:imageRadius="4.0"
                                tools:ignore="RtlHardcoded" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="About"
                                android:textAllCaps="true"
                                android:fontFamily="@font/poppins_thin"
                                android:textSize="15sp"
                                android:textColor="@color/colorGray"
                                tools:ignore="HardcodedText" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="16dp"
                                android:orientation="horizontal"
                                android:layout_marginTop="12dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_navigation_admins"
                                    android:tint="@color/colorLightGray"
                                    android:layout_marginEnd="8dp"/>

                                <TextView
                                    android:id="@+id/place_user_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Christian Scott"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textColor="@color/colorGray"
                                    tools:ignore="HardcodedText" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="5dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_navigation_tables"
                                    android:tint="@color/colorLightGray"
                                    android:layout_marginEnd="8dp"/>

                                <TextView
                                    android:id="@+id/place_table_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Kampala Road"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textColor="@color/colorGray"
                                    tools:ignore="HardcodedText" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="5dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_people_gray_24dp"
                                    android:tint="@color/colorLightGray"
                                    android:layout_marginEnd="8dp"/>

                                <TextView
                                    android:id="@+id/place_number_people"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="10"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textColor="@color/colorGray"
                                    tools:ignore="HardcodedText" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="5dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_navigation_reservations"
                                    android:tint="@color/colorLightGray"
                                    android:layout_marginEnd="8dp"/>

                                <TextView
                                    android:id="@+id/place_bill_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="+256756891594"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textColor="@color/colorGray"
                                    tools:ignore="HardcodedText" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="5dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_navigation_admins"
                                    android:tint="@color/colorLightGray"
                                    android:layout_marginEnd="8dp" />

                                <TextView
                                    android:id="@+id/place_waiter_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Administrator"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textColor="@color/colorGray"
                                    tools:ignore="HardcodedText" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="5dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_clock_white_24dp"
                                    android:tint="@color/colorLightGray"
                                    android:layout_marginEnd="8dp"/>

                                <TextView
                                    android:id="@+id/place_created_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="June 15, 2019"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textColor="@color/colorGray"
                                    tools:ignore="HardcodedText" />

                            </LinearLayout>

                            <Button
                                android:id="@+id/place_end_placement"
                                android:layout_width="100dp"
                                android:layout_height="35dp"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/background_blue"
                                android:fontFamily="@font/poppins_bold"
                                android:text="End"
                                android:textColor="@color/colorWhite"
                                android:textSize="12dp"
                                tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded,SpUsage" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="12dp">

                        <include
                            android:id="@+id/progress_loader"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginTop="20dp"
                            layout="@layout/include_progress_loader" />

                        <LinearLayout
                            android:id="@+id/place_content_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Orders"
                                android:textAllCaps="true"
                                android:fontFamily="@font/poppins_thin"
                                android:textSize="15sp"
                                android:textColor="@color/colorGray"
                                tools:ignore="HardcodedText" />

                            <com.codepipes.tingadmin.tableview.TableView
                                android:id="@+id/place_orders_table_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:background="@drawable/background_tableview"
                                android:padding="1dp"
                                android:layout_gravity="center_horizontal"
                                android:visibility="gone"
                                app:separator_color="@color/colorVeryLightGray"
                                app:show_horizontal_separator="false"
                                app:show_vertical_separator="true"
                                app:selected_color="@color/colorShadeGray"
                                app:row_header_width="0dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="18dp"
                                android:text="Extras"
                                android:textAllCaps="true"
                                android:fontFamily="@font/poppins_thin"
                                android:textSize="15sp"
                                android:textColor="@color/colorGray"
                                tools:ignore="HardcodedText" />

                            <com.codepipes.tingadmin.tableview.TableView
                                android:id="@+id/place_extras_table_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:background="@drawable/background_tableview"
                                android:padding="1dp"
                                android:layout_gravity="center_horizontal"
                                app:separator_color="@color/colorVeryLightGray"
                                app:show_horizontal_separator="false"
                                app:show_vertical_separator="true"
                                app:selected_color="@color/colorShadeGray"
                                app:row_header_width="0dp"/>

                            <Button
                                android:id="@+id/place_add_extra"
                                android:layout_width="150dp"
                                android:layout_height="35dp"
                                android:layout_marginTop="8dp"
                                android:text="Add Extra"
                                android:textAllCaps="true"
                                android:background="@drawable/background_green"
                                android:textSize="12sp"
                                android:textColor="@color/colorWhite"
                                android:fontFamily="@font/poppins_semi_bold"
                                tools:ignore="HardcodedText" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="@color/colorVeryLightGray"
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Amount"
                                android:textSize="12sp"
                                android:textColor="@color/colorGray"
                                android:fontFamily="@font/poppins_regular"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/place_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="UGX 129.0000"
                                android:textSize="16sp"
                                android:textColor="@color/colorGray"
                                android:fontFamily="@font/poppins_medium"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Discount"
                                android:textSize="12sp"
                                android:textColor="@color/colorGray"
                                android:fontFamily="@font/poppins_regular"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/place_discount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="UGX 129.0000"
                                android:textSize="16sp"
                                android:textColor="@color/colorGray"
                                android:fontFamily="@font/poppins_medium"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Extras Total"
                                android:textSize="12sp"
                                android:textColor="@color/colorGray"
                                android:fontFamily="@font/poppins_regular"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/place_extras_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="UGX 129.0000"
                                android:textSize="16sp"
                                android:textColor="@color/colorGray"
                                android:fontFamily="@font/poppins_medium"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Tip"
                                android:textSize="12sp"
                                android:textColor="@color/colorGray"
                                android:fontFamily="@font/poppins_regular"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/place_tip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="UGX 129.0000"
                                android:textSize="16sp"
                                android:textColor="@color/colorGray"
                                android:fontFamily="@font/poppins_medium"
                                tools:ignore="HardcodedText" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="@color/colorVeryLightGray"
                                android:layout_marginTop="12sp"
                                android:layout_marginBottom="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total"
                                android:textSize="12sp"
                                android:textColor="@color/colorGray"
                                android:fontFamily="@font/poppins_regular"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/place_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="UGX 129.0000"
                                android:textSize="20sp"
                                android:textColor="@color/colorGray"
                                android:fontFamily="@font/poppins_medium"
                                tools:ignore="HardcodedText" />

                            <Button
                                android:id="@+id/place_mark_bill_paid"
                                android:layout_width="150dp"
                                android:layout_height="35dp"
                                android:layout_marginTop="12dp"
                                android:text="Mark As Paid"
                                android:textAllCaps="true"
                                android:background="@drawable/background_green"
                                android:textSize="12sp"
                                android:textColor="@color/colorWhite"
                                android:fontFamily="@font/poppins_semi_bold"
                                tools:ignore="HardcodedText" />

                        </LinearLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">

                        <Button
                            android:id="@+id/dialog_button_close"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_marginEnd="6dp"
                            android:layout_alignParentEnd="true"
                            android:paddingStart="30dp"
                            android:paddingEnd="30dp"
                            android:background="@drawable/background_red"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Close"
                            android:textColor="@color/colorWhite"
                            android:textSize="12dp"
                            tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded,SpUsage" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</RelativeLayout>