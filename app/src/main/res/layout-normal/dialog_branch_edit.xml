<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTransparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="12dp"
        android:background="@drawable/background_dialog_rounded">

        <com.codepipes.tingadmin.custom.LockedNestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dialog_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit Branch"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textSize="13sp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="12dp"
                    android:textColor="@color/colorGray"
                    tools:ignore="HardcodedText" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorVeryLightGray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Enter Branch Address :"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:textSize="12sp"
                        android:textColor="@color/colorGray"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/branch_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="11sp"
                        android:textColor="@color/colorGray"
                        android:background="@drawable/border_row"
                        android:inputType="text"
                        android:hint="Branch Address"
                        android:importantForAutofill="no"
                        android:scrollbars="vertical"
                        android:textColorHint="@color/colorLightGray"
                        tools:ignore="HardcodedText" />

                    <fragment
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="12dp"
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:text="Enter Branch Name :"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:textSize="12sp"
                        android:textColor="@color/colorGray"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/branch_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="11sp"
                        android:textColor="@color/colorGray"
                        android:background="@drawable/border_row"
                        android:inputType="text"
                        android:hint="Branch Name"
                        android:importantForAutofill="no"
                        android:scrollbars="vertical"
                        android:textColorHint="@color/colorLightGray"
                        tools:ignore="HardcodedText" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginTop="12dp"
                                android:text="Enter Branch Region :"
                                android:fontFamily="@font/poppins_semi_bold"
                                android:textSize="12sp"
                                android:textColor="@color/colorGray"
                                tools:ignore="HardcodedText" />

                            <EditText
                                android:id="@+id/branch_region"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:paddingLeft="12dp"
                                android:paddingRight="12dp"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="11sp"
                                android:textColor="@color/colorGray"
                                android:background="@drawable/border_row"
                                android:inputType="text"
                                android:hint="Branch Region"
                                android:importantForAutofill="no"
                                android:scrollbars="vertical"
                                android:textColorHint="@color/colorLightGray"
                                tools:ignore="HardcodedText,TextFields" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:layout_marginStart="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginTop="12dp"
                                android:text="Enter Branch Road :"
                                android:fontFamily="@font/poppins_semi_bold"
                                android:textSize="12sp"
                                android:textColor="@color/colorGray"
                                tools:ignore="HardcodedText" />

                            <EditText
                                android:id="@+id/branch_road"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:paddingLeft="12dp"
                                android:paddingRight="12dp"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="11sp"
                                android:textColor="@color/colorGray"
                                android:background="@drawable/border_row"
                                android:inputType="text"
                                android:hint="Branch Road"
                                android:importantForAutofill="no"
                                android:scrollbars="vertical"
                                android:textColorHint="@color/colorLightGray"
                                tools:ignore="HardcodedText,TextFields" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="12dp"
                            android:text="Select Branch Type :"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:textSize="12sp"
                            android:textColor="@color/colorGray"
                            tools:ignore="HardcodedText" />

                        <RelativeLayout
                            android:id="@+id/branch_type_select"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:background="@drawable/border_row">

                            <TextView
                                android:id="@+id/selected_branch_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Branch Type"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="11sp"
                                android:textColor="@color/colorLightGray"
                                tools:ignore="HardcodedText" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_arrow_drop_down_gray_24dp"
                                android:layout_alignParentEnd="true"
                                tools:ignore="ContentDescription" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginTop="12dp"
                                android:text="Enter Branch Email :"
                                android:fontFamily="@font/poppins_semi_bold"
                                android:textSize="12sp"
                                android:textColor="@color/colorGray"
                                tools:ignore="HardcodedText" />

                            <EditText
                                android:id="@+id/branch_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:paddingLeft="12dp"
                                android:paddingRight="12dp"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="11sp"
                                android:textColor="@color/colorGray"
                                android:background="@drawable/border_row"
                                android:inputType="textEmailAddress"
                                android:hint="Branch Email"
                                android:importantForAutofill="no"
                                android:scrollbars="vertical"
                                android:textColorHint="@color/colorLightGray"
                                tools:ignore="HardcodedText,TextFields" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:layout_marginStart="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginTop="12dp"
                                android:text="Enter Branch Phone :"
                                android:fontFamily="@font/poppins_semi_bold"
                                android:textSize="12sp"
                                android:textColor="@color/colorGray"
                                tools:ignore="HardcodedText" />

                            <EditText
                                android:id="@+id/branch_phone_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:paddingLeft="12dp"
                                android:paddingRight="12dp"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="11sp"
                                android:textColor="@color/colorGray"
                                android:background="@drawable/border_row"
                                android:inputType="phone"
                                android:hint="Branch Phone"
                                android:importantForAutofill="no"
                                android:scrollbars="vertical"
                                android:textColorHint="@color/colorLightGray"
                                tools:ignore="HardcodedText,TextFields" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp">

                        <Button
                            android:id="@+id/dialog_button_cancel"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginEnd="6dp"
                            android:paddingStart="30dp"
                            android:paddingEnd="30dp"
                            android:background="@drawable/background_red"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Cancel"
                            android:textColor="@color/colorWhite"
                            android:textSize="13dp"
                            tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded,SpUsage" />

                        <Button
                            android:id="@+id/dialog_button_save"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginStart="6dp"
                            android:paddingStart="30dp"
                            android:paddingEnd="30dp"
                            android:textColor="@color/colorWhite"
                            android:text="Save"
                            android:textSize="13dp"
                            android:fontFamily="@font/poppins_bold"
                            android:background="@drawable/background_green"
                            tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded,SpUsage" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.codepipes.tingadmin.custom.LockedNestedScrollView>

    </LinearLayout>

</RelativeLayout>